{% extends "base.html.twig" %}

{% block title %}Quai Antique - Nouvelle Image
{% endblock %}

{% block body %}
	<div class="container">

		<h1 class="mt-4">Cr√©ation d'une Image</h1>

		{{ form_start(form) }}

		<div class="form-group">
			{{ form_label(form.name) }}
			{{ form_widget(form.name) }}
			<div class="form-error">
				{{ form_errors(form.name) }}
			</div>
		</div>



		{{ form_row(form.imageFile) }}

		{{ form_label(form.ingredients) }}
		<br>
		<div id="ingredients-wrapper">
			{% for field in form.ingredients %}
				<div style="min-width: 10%;">
					{{ form_widget(field) }}
					{{ form_label(field) }}
				</div>
			{% endfor %}
		</div>

		{{ form_end(form) }}
	</div>
{% endblock %}
